{
    "name": "@electrovir/element-vir-mono-repo",
    "version": "20.0.0",
    "private": true,
    "license": "(MIT or CC0 1.0)",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build:pages": "mono-vir for-each-async npm run build:pages",
        "compile": "mono-vir for-each npm run compile",
        "docs": "mono-vir for-each-async npm run docs",
        "format": "virmator format",
        "publish": "virmator publish \"npm run compile && npm run test:all\"",
        "test": "mono-vir for-each-async npm test",
        "test:all": "npm run compile && concurrently -c auto -m 90% --kill-others-on-fail --colors --names tests,spelling,format,docs \"npm run test:coverage\" \"npm run test:spelling\" \"npm run test:format\" \"npm run test:docs\"",
        "test:coverage": "npm run test coverage",
        "test:deps": "virmator deps check",
        "test:docs": "mono-vir for-each-async virmator docs check",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "npm run compile"
    },
    "devDependencies": {
        "cspell": "^8.3.2",
        "dependency-cruiser": "^16.0.0",
        "esbuild": "^0.19.11",
        "markdown-code-example-inserter": "^0.3.3",
        "npm-check-updates": "~16.12.3",
        "nyc": "^15.1.0",
        "prettier": "^3.2.1",
        "prettier-plugin-interpolated-html-tags": "^1.0.3",
        "prettier-plugin-jsdoc": "^1.3.0",
        "prettier-plugin-multiline-arrays": "^3.0.1",
        "prettier-plugin-organize-imports": "^3.2.4",
        "prettier-plugin-packagejson": "^2.4.9",
        "prettier-plugin-sort-json": "^3.1.0",
        "prettier-plugin-toml": "^2.0.1",
        "ts-node": "^10.9.2",
        "typedoc": "^0.25.7",
        "typescript": "^5.3.3",
        "virmator": "^11.2.0"
    },
    "overrides": {
        "lit": "^3.1.1"
    }
}
