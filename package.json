{
    "name": "element-vir",
    "version": "9.0.0",
    "keywords": [
        "custom",
        "web",
        "components",
        "elements",
        "declarative",
        "lit"
    ],
    "homepage": "https://github.com/electrovir/element-vir",
    "bugs": {
        "url": "https://github.com/electrovir/element-vir/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/element-vir"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "compile": "rm -rf dist && rm tsconfig.tsbuildinfo && tsc --project tsconfig.json",
        "docs:update": "virmator code-in-markdown",
        "format": "virmator format",
        "publish": "virmator publish \"npm run compile && npm run test:all\"",
        "start": "npm install && virmator frontend",
        "test": "virmator test-web",
        "test:all": "npm run test:types && npm run test:coverage && npm run test:spelling && npm run test:format && npm run test:docs",
        "test:coverage": "virmator test-web coverage",
        "test:docs": "virmator code-in-markdown check",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "tsc --noEmit"
    },
    "dependencies": {
        "@augment-vir/browser": "^11.1.2",
        "@augment-vir/common": "^11.1.2",
        "lit": "2.6.1"
    },
    "devDependencies": {
        "@augment-vir/browser-testing": "^11.1.2",
        "@augment-vir/node-js": "^11.1.2",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@open-wc/testing": "^3.1.7",
        "@types/mocha": "^10.0.1",
        "@web/dev-server-esbuild": "^0.3.3",
        "@web/test-runner": "^0.15.0",
        "@web/test-runner-commands": "^0.6.5",
        "@web/test-runner-playwright": "^0.9.0",
        "ansi-colors": "^4.1.3",
        "cspell": "^6.19.2",
        "istanbul-smart-text-reporter": "^1.1.1",
        "markdown-code-example-inserter": "^0.1.13",
        "mocha-spec-reporter-with-file-names": "^0.0.3",
        "nyc": "^15.1.0",
        "prettier": "^2.8.3",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^1.1.3",
        "prettier-plugin-organize-imports": "^3.2.2",
        "prettier-plugin-packagejson": "^2.4.0",
        "prettier-plugin-sort-json": "^1.0.0",
        "prettier-plugin-toml": "^0.3.1",
        "ts-node": "^10.9.1",
        "type-fest": "^3.5.3",
        "typescript": "^4.9.4",
        "virmator": "^5.4.0",
        "vite": "^4.0.4"
    }
}
